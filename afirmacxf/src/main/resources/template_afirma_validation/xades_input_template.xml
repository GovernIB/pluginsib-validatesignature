<?xml version="1.0" encoding="UTF-8"?><dss:VerifyRequest xmlns:dss="urn:oasis:names:tc:dss:1.0:core:schema" xmlns:ades="urn:oasis:names:tc:dss:1.0:profiles:AdES:schema#" xmlns:afxp="urn:afirma:dss:1.0:profile:XSS:schema" xmlns:cmism="http://docs.oasis-open.org/ns/cmis/messaging/200908/" xmlns:ds="http://www.w3.org/2000/09/xmldsig#" xmlns:vr="urn:oasis:names:tc:dss:1.0:profiles:verificationreport:schema#" Profile="urn:afirma:dss:1.0:profile:XSS">
	
	
<#if (dss_InputDocuments_dss_Document_dss_Base64Data)??>	<dss:InputDocuments>
		<dss:Document>
			
		<dss:Base64Data>${dss_InputDocuments_dss_Document_dss_Base64Data}</dss:Base64Data></dss:Document>
        
        
    </dss:InputDocuments>
</#if><#if (dss_InputDocuments_dss_Document_dss_Base64XML)??>	<dss:InputDocuments>
		<dss:Document>
			
		<dss:Base64XML>${dss_InputDocuments_dss_Document_dss_Base64XML}</dss:Base64XML></dss:Document>
        
        
    </dss:InputDocuments>
</#if>	<dss:OptionalInputs>
		<dss:ClaimedIdentity>
			<dss:Name>${dss_OptionalInputs_dss_ClaimedIdentity_dss_Name}</dss:Name>
		</dss:ClaimedIdentity>
<#if validationRequest.signatureRequestedInformation.returnCertificateInfo=true>		<afxp:ReturnReadableCertificateInfo/><#else>		</#if>
		<vr:ReturnVerificationReport>
<#if validationRequest.signatureRequestedInformation.validateCertificateRevocation=true>			<vr:CheckOptions>
				<vr:CheckCertificateStatus>true</vr:CheckCertificateStatus>
				
			</vr:CheckOptions><#else>			</#if>
			<vr:ReportOptions>
<#if validationRequest.signatureRequestedInformation.returnCertificates=true>
				<vr:IncludeCertificateValues>true</vr:IncludeCertificateValues>
				</#if>
<#if validationRequest.signatureRequestedInformation.returnCertificates=true || validationRequest.signatureRequestedInformation.returnTimeStampInfo=true>
				<vr:ReportDetailLevel>urn:oasis:names:tc:dss:1.0:reportdetail:allDetails</vr:ReportDetailLevel><#else>                
				
				
				<vr:ReportDetailLevel>urn:oasis:names:tc:dss:1.0:reportdetail:noDetails</vr:ReportDetailLevel></#if>
			</vr:ReportOptions>
		</vr:ReturnVerificationReport>
<#if validationRequest.signatureRequestedInformation.returnTimeStampInfo=true>		<afxp:AdditionalReportOption>
			<afxp:IncludeProperties>
				<afxp:IncludeProperty Type="urn:afirma:dss:1.0:profile:XSS:SignatureProperty:SignatureTimeStamp"/>
			</afxp:IncludeProperties>
		</afxp:AdditionalReportOption></#if>
		
<#if validationRequest.signatureRequestedInformation.returnValidationChecks=true>		<dss:ReturnProcessingDetails/></#if>
		
		
		
		
	</dss:OptionalInputs>
	
	<#if (dss_SignatureObject)??><dss:SignatureObject>
		
		
		
		${dss_SignatureObject}</dss:SignatureObject></#if>
	
</dss:VerifyRequest>